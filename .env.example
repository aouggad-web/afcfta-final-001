# ==========================================
# AfCFTA Customs Crawler - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control

# ==========================================
# MongoDB Configuration
# ==========================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme_secure_password
MONGO_DB=afcfta
MONGO_URL=mongodb://admin:changeme_secure_password@mongodb:27017/

# Database name
DB_NAME=afcfta

# ==========================================
# Email Notifications (SMTP)
# ==========================================
# Set to 'true' to enable email notifications
EMAIL_NOTIFICATIONS_ENABLED=false
EMAIL_ENABLED=false

# SMTP Server Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587

# SMTP Authentication
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password

# Email Addresses
EMAIL_FROM=noreply@afcfta-calculator.com
EMAIL_TO=admin@afcfta-calculator.com,ops@afcfta-calculator.com

# Gmail App Password Instructions:
# 1. Enable 2FA: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character password here

# Alternative SMTP Providers:
# Outlook: smtp-mail.outlook.com:587
# SendGrid: smtp.sendgrid.net:587 (user=apikey, password=SG.xxx)
# AWS SES: email-smtp.us-east-1.amazonaws.com:587

# ==========================================
# Slack Notifications
# ==========================================
# Set to 'true' to enable Slack notifications
SLACK_NOTIFICATIONS_ENABLED=false
SLACK_ENABLED=false

# Slack Webhook URL (create at https://api.slack.com/apps)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack Channel (optional, defaults to webhook default)
SLACK_CHANNEL=#afcfta-monitoring

# Slack Configuration Instructions:
# 1. Create app: https://api.slack.com/apps
# 2. Enable "Incoming Webhooks"
# 3. Add webhook to workspace
# 4. Copy webhook URL

# ==========================================
# Server Configuration
# ==========================================
# FastAPI server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Environment (development, staging, production)
ENVIRONMENT=development

# Enable debug mode (set to false in production)
DEBUG=true

# ==========================================
# Logging Configuration
# ==========================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE_PATH=./logs/afcfta.log

# ==========================================
# Crawler Configuration
# ==========================================
# Maximum concurrent crawl jobs
MAX_CONCURRENT_CRAWLS=5

# Crawler timeout in seconds
CRAWLER_TIMEOUT=300

# Retry attempts for failed crawls
CRAWLER_RETRY_ATTEMPTS=3

# Delay between retries (seconds)
CRAWLER_RETRY_DELAY=60

# User agent for web scraping
USER_AGENT=Mozilla/5.0 (compatible; AfCFTA-Crawler/1.0)

# ==========================================
# Job Scheduler Configuration
# ==========================================
# Enable scheduled jobs
SCHEDULER_ENABLED=false

# Cron schedule for automatic crawls (default: daily at 2 AM)
CRAWL_SCHEDULE=0 2 * * *

# Timezone for scheduler
SCHEDULER_TIMEZONE=UTC

# ==========================================
# Data Validation
# ==========================================
# Minimum validation score (0-100) to accept data
MIN_VALIDATION_SCORE=70

# Send notification if validation score below threshold
VALIDATION_ALERT_THRESHOLD=80

# ==========================================
# API Keys (Optional)
# ==========================================
# External API keys if needed
COMTRADE_API_KEY=
WTO_API_KEY=
WORLD_BANK_API_KEY=

# ==========================================
# Security
# ==========================================
# JWT Secret for authentication (generate random string)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# API rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ==========================================
# Backup Configuration
# ==========================================
# Enable automatic backups
BACKUP_ENABLED=false

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 0 * * *

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Backup destination path
BACKUP_PATH=/backups
