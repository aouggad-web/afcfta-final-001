# =========================================
# MongoDB Configuration
# =========================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme
MONGO_DB=afcfta
MONGO_URL=mongodb://admin:changeme@mongodb:27017/

# Database name for the application
DB_NAME=afcfta

# =========================================
# Email Notifications Configuration
# =========================================
# Enable/disable email notifications
EMAIL_NOTIFICATIONS_ENABLED=true

# SMTP server configuration (Gmail example)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587

# SMTP authentication credentials
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password

# Email addresses
EMAIL_FROM=noreply@afcfta-calculator.com
EMAIL_TO=admin@afcfta-calculator.com

# =========================================
# Slack Notifications Configuration
# =========================================
# Enable/disable Slack notifications
SLACK_NOTIFICATIONS_ENABLED=true

# Slack webhook URL
# Get from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack channel name (optional, webhook has default)
SLACK_CHANNEL=#afcfta-monitoring

# =========================================
# Application Configuration
# =========================================
# Application environment
APP_ENV=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# =========================================
# Optional: External Services
# =========================================
# Gemini API (for AI-powered analysis)
GEMINI_API_KEY=your-gemini-api-key

# Other service API keys as needed
# WORLD_BANK_API_KEY=
# OEC_API_KEY=
